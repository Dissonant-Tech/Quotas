<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.dissonant.quotas.EditActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="True"
        android:orientation="vertical"
        android:background="@color/White"
        >
    <LinearLayout
            style="@style/LinearLayout"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
        <!-- Title -->
        <com.dissonant.quotas.ui.views.FloatingHintEditText
                android:id="@+id/edit_title"
                style="@style/floating_edittext"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:hint="@string/edit_title_hint"
                android:inputType="textCapWords"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@null"
            />

        <View style="@style/divider"/>

        <!-- Times -->
        <LinearLayout
                style="@style/LinearLayout"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/paper_ripple"
                >
            <ImageView
                    style="@style/icon"
                    android:src="@drawable/ic_clock"
                />
            <LinearLayout
                    style="@style/LinearLayout"
                    android:orientation="vertical"
                    android:layout_marginLeft="34dp"
                    >
                <TextView
                        style="@style/text_icon"
                        android:text="@string/edit_timerange_title"
                    />
                <TextView
                        android:text="@string/edit_timerange_value"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/text_hint_regular"
                    />
                <TextView
                        style="@style/text_icon"
                        android:text="@string/edit_duration_title"
                    />
                <TextView
                        android:text="@string/edit_duration_value"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/text_hint_regular"
                    />

            </LinearLayout>
        </LinearLayout>

        <View
                style="@style/divider"
                android:layout_marginLeft="72dp"
            />

        <!-- Color -->
        <LinearLayout
                style="@style/LinearLayout"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >
            <View
                    style="@style/icon"
                    android:background="@drawable/circle"
                    android:alpha="1"
                />
            <LinearLayout
                    style="@style/LinearLayout"
                    android:orientation="vertical"
                    android:layout_marginLeft="34dp"
                    android:background="@drawable/paper_ripple"
                    >
                <TextView
                        style="@style/text_icon"
                        android:text="@string/edit_color_title"
                    />
                <TextView
                        android:id="@+id/color_value"
                        android:text="@string/color_value"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textColor="@color/text_hint_regular"
                    />
            </LinearLayout>
            <Spinner
                    android:id="@+id/edit_color_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:popupBackground="@null"
                    android:dividerHeight="0dip"
                    android:divider="@null"
                />
        </LinearLayout>

        <View
                style="@style/divider"
                android:layout_marginLeft="72dp"
            />

        <!-- Location -->
        <LinearLayout
                style="@style/LinearLayout"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >
            <ImageView
                    style="@style/icon"
                    android:src="@drawable/ic_action_place"
                />
            <TextView
                    android:id="@+id/color_value"
                    android:text="@string/location"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="34dp"
                    android:textSize="16dp"
                    android:textColor="@color/text_hint_regular"
                    android:background="@drawable/paper_ripple"
                />
        </LinearLayout>

        <!-- Repeat -->
        <LinearLayout
                style="@style/LinearLayout"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >
            <CheckBox
                    android:id="@+id/repeat_switch"
                    android:text="@string/repeat_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </CheckBox>
        </LinearLayout>
        <LinearLayout
                style="@style/LinearLayout"
                android:id="@+id/repeat_options"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                >
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
            <ToggleButton
                    style="@style/togglebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    >
            </ToggleButton>
        </LinearLayout>

        <!-- Notes -->
        <com.dissonant.quotas.ui.views.FloatingHintEditText
                android:id="@+id/edit_description"
                style="@style/floating_edittext"
                android:layout_height="48dp"
                android:layout_width="fill_parent"
                android:hint="@string/edit_description_hint"
                android:inputType="text"
                android:layout_marginBottom="16dip"
                android:padding="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
            />
    </LinearLayout>
    <ImageButton
            style="@style/fab"
            android:id="@+id/fab"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ripple"
            android:stateListAnimator="@anim/fab_anim"
            android:src="@drawable/ic_action_save"
            android:padding="12dp"
            android:scaleType="fitCenter"
        />
</LinearLayout>
