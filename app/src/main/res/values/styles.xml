<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Base" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="floatingHintEditTextStyle">@style/Widget.FloatingHintEditText</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.FloatingHintEditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="icon">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:alpha">.64</item>
    </style>

    <style name ="edittext"
            parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textColorHint">@color/text_regular</item>
    </style>

    <style name="text_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textColorHint">@color/text_hint_regular</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="togglebutton">
    </style>

    <style name="EditDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:background">@color/DimGray</item>
    </style>

    <style name="EditDividerTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">16dip</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TimeLinearLayout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="activityedit_button">
        <item name="android:background">@color/WhiteSmoke</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">@color/PaleGreen</item>
        <item name="android:layout_marginLeft">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginRight">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginTop">@dimen/activityedit_button_margin</item>
    </style>

    <style name="dialog_animation_slide_up">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>

    <style name="fab">
        <item name="android:elevation">2dp</item>
        <item name="android:transitionName">fab_button</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:stateListAnimator">@anim/fab_anim</item>
    </style>

</resources>
