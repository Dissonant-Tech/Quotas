<resources>
    <!-- Quotas Material Theme -->
    <style name="QuotasTheme"
            parent="@android:style/Theme.Material.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/QuotasActionBar</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/White</item>

        <item name="android:windowContentTransitions">True</item>
        <item name="android:windowEnterTransition">@transition/slide</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/move_image</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/move_image</item>
    </style>

    <!-- Quotas SettingsActivity Style -->
    <style name="QuotasSettingsTheme"
            parent="@android:style/Widget.Material.Light">
        <item name="android:actionBarStyle">@style/QuotasActionBar</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:windowContentTransitions">True</item>
    </style>

    <!-- Quotas EditActivity Style -->
    <style name="QuotasEditTheme"
            parent="@style/QuotasTheme">
        <item name="android:actionBarStyle">@style/QuotasActionBar</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:windowContentTransitions">True</item>
        <item name="android:windowEnterTransition">@transition/slide</item>
        <item name="android:windowExitTransition">@transition/slide</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/move_image</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/move_image</item>
    </style>

    <!-- Quotas ActionBar Style -->
    <style name="QuotasActionBar"
            parent="@android:style/Widget.Material.Light">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:displayOptions">showTitle</item>
    </style>
</resources>
