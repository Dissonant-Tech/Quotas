<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingLeft="@dimen/dialog_horizontal_margin"
        android:paddingRight="@dimen/dialog_horizontal_margin"
        >
    <LinearLayout
            android:id="@+id/recurrence_weekly"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            >

        <LinearLayout style="@style/RecurrenceInterval">
            <TextView style="@style/RecurrenceIntervalPre"/>
            <EditText style="@style/RecurrenceIntervalCount"/>
            <TextView style="@style/RecurrenceIntervalPost"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/recurrence_toggles"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                >
            <ToggleButton
                    android:id="@+id/mon_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/mon"
                    android:textOff="@string/mon"
                />
            <ToggleButton
                    android:id="@+id/tue_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/tue"
                    android:textOff="@string/tue"
                />
            <ToggleButton
                    android:id="@+id/wed_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/wed"
                    android:textOff="@string/wed"
                />
            <ToggleButton
                    android:id="@+id/thu_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/thu"
                    android:textOff="@string/thu"
                />
            <ToggleButton
                    android:id="@+id/fri_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/fri"
                    android:textOff="@string/fri"
                />
            <ToggleButton
                    android:id="@+id/sat_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/sat"
                    android:textOff="@string/sat"
                />
            <ToggleButton
                    android:id="@+id/sun_toggle"
                    style="@style/RecurrencePickerToggle"
                    android:textOn="@string/sun"
                    android:textOff="@string/sun"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/recurrence_daily"
            android:orientation="horizontal"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:layout_width="fill_parent"
            android:visibility="gone"
            >
        <LinearLayout style="@style/RecurrenceInterval">
            <TextView style="@style/RecurrenceIntervalPre"/>
            <EditText style="@style/RecurrenceIntervalCount"/>
            <TextView style="@style/RecurrenceIntervalPost"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/recurrence_monthly"
            android:orientation="horizontal"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:layout_width="fill_parent"
            android:visibility="gone"
            >
        <LinearLayout style="@style/RecurrenceInterval">
            <TextView style="@style/RecurrenceIntervalPre"/>
            <EditText style="@style/RecurrenceIntervalCount"/>
            <TextView style="@style/RecurrenceIntervalPost"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/recurrence_yearly"
            android:orientation="horizontal"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:layout_width="fill_parent"
            android:visibility="gone"
            >
        <LinearLayout style="@style/RecurrenceInterval">
            <TextView style="@style/RecurrenceIntervalPre"/>
            <EditText style="@style/RecurrenceIntervalCount"/>
            <TextView style="@style/RecurrenceIntervalPost"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="@dimen/listPreferredItemHeight"
            android:layout_width="fill_parent"
            >
        <Spinner
                android:id="@+id/endSpinner"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="@color/text_regular"
            />
    </LinearLayout>
</LinearLayout>
