<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Base" parent="android:Theme.Material.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="floatingHintEditTextStyle">@style/Widget.FloatingHintEditText</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="Widget"></style>

    <style name="Widget.FloatingHintEditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="icon">
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:alpha">.55</item>
    </style>

    <style name ="floating_edittext"
            parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textColorHint">@color/text_hint_regular</item>
    </style>

    <style name="button"
            >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="text_icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textColorHint">@color/text_hint_regular</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="togglebutton">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="LinearLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TimeLinearLayout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="activityedit_button">
        <item name="android:background">@color/WhiteSmoke</item>
        <item name="android:elevation">1dp</item>
        <item name="android:textColor">@color/PaleGreen</item>
        <item name="android:layout_marginLeft">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginRight">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/activityedit_button_margin</item>
        <item name="android:layout_marginTop">@dimen/activityedit_button_margin</item>
    </style>

    <style name="dialog_animation_slide_up">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>

    <style name="fab">
        <item name="android:elevation">2dp</item>
        <item name="android:transitionName">fab_button</item>
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:stateListAnimator">@anim/fab_anim</item>
    </style>

    <style name="Dialog">
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogTitle"
            parent="@style/Dialog">
        <item name="android:layout_height">@dimen/listPreferredItemHeight</item>
    </style>

    <style name="Dropdown">
        <item name="android:textColor">@color/text_regular</item>
    </style>

    <!-- Recurrence Dialog theme -->

    <style name="TextAppearance.RecurrencePickerStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_regular</item>
    </style>

    <style name="RecurrenceText">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="RecurrencePickerToggle">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/recurrence_toggle_state</item>
    </style>

    <style name="RecurrenceInterval">
        <item name="android:id">@id/recurrence_interval</item>
        <item name="android:layout_height">@dimen/listPreferredItemHeight</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="RecurrenceIntervalPre"
            parent="RecurrenceText">
        <item name="android:id">@id/recurrence_interval_pre</item>
        <item name="android:text">@string/every</item>
    </style>

    <style name="RecurrenceIntervalCount">
        <item name="android:id">@id/recurrence_interval_count</item>
        <item name="android:minWidth">18dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/text_regular</item>
    </style>

    <style name="RecurrenceIntervalPost"
            parent="RecurrenceText">
        <item name="android:id">@id/recurrence_interval_post</item>
    </style>

</resources>

